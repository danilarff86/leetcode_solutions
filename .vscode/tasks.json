{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake configure",
            "type": "process",
            "command": "cmake",
            "options":{
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "-G",
                "Unix Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                "../"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "CMake build",
            "type": "process",
            "command": "cmake",
            "options":{
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "--build",
                ".",
                "--target",
                "solutions",
                "--",
                "-j4"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run solutions",
            "type": "process",
            "command": "./solutions",
            "options":{
                "cwd": "${workspaceRoot}/build/solutions"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
