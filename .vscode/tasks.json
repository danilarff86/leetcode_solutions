{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake configure",
            "type": "process",
            "command": "cmake",
            "options":{
                "cwd": "${workspaceRoot}/build_vscode"
            },
            "args": [
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_COMPILER_LAUNCHER=ccache",
                "../"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Ninja build",
            "type": "process",
            "command": "ninja",
            "options":{
                "cwd": "${workspaceRoot}/build_vscode"
            },
            "args": [
                "solutions"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Ninja clean",
            "type": "process",
            "command": "ninja",
            "options":{
                "cwd": "${workspaceRoot}/build_vscode"
            },
            "args": [
                "clean"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run solutions",
            "type": "process",
            "command": "./solutions",
            "options":{
                "cwd": "${workspaceRoot}/build_vscode/solutions"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
